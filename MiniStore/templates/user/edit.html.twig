{% extends 'base.html.twig' %}

{% block title %}Modification de l'utilisateur{% endblock %}

{% block body %}
<div class="containeur form">
    <h1 class="mt-4 container">Modification de votre profil utilisateur</h1>
    <div class="container">
        {% for message in app.flashes('warning') %}
        <div class="alert alert-warning mt-4">
            {{ message }}
        </div>
        {% endfor %}
        {{ form(form) }}
    </div>
</div>

{% endblock %}
